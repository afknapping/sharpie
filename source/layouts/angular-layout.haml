= partial "layouts/doctype"

%head
  -# Meta tags
  = partial "layouts/meta"

  -# Page title
  %title= current_page.data.title

  -# Stylesheets
  = stylesheet_link_tag "application"

  -# Application icons
  = partial "layouts/icons"

  -# HTML5Shiv
  <!--[if IE]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->

%body{ class: current_page.data.classes || "", "ng-app" => "", "ng-init" => "name = 'World'"}
  = yield

  -# JavaScripts
  -# = javascript_include_tag "angular"
  = javascript_include_tag "application"

-# Need this to close the doctype partial
</html>

